                <TextView
                    android:id="@+id/tvInformacionPago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:text="@string/info_payment_verification"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_small"

                    android:layout_gravity="center"
                    android:autoLink="web"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="2"
                    android:minLines="2"
                    android:padding="@dimen/padding_medium_10dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/ic_menu_mylocation"

                    android:contentDescription="Pro favor verifique sus datos"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"

                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:focusable="true"

                    />

                <Button
                    android:id="@+id/btnPagar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_button_large"
                    android:backgroundTint="@color/sunstone_neutral_2"
                    android:text="@string/button_pay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"

                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:drawableLeft="@android:drawable/ic_menu_set_as"
                    android:drawablePadding="8dp"
                    android:elevation="4dp"
                    android:enabled="true"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:cornerRadius="8dp"

                    android:contentDescription="Pagar"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"

                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:focusable="true"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
