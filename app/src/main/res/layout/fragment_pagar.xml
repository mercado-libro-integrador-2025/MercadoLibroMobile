<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".fragments.PagoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_large">

        <TextView
            android:id="@+id/tvMetodoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:text="@string/title_payment_method"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xlarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:contentDescription="Metodo de Pago"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"

            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"


            />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMetodoPago"

            android:contentDescription="Título: Bienvenido a la sección de pago"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"

            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_card"
                android:orientation="vertical"
                android:padding="@dimen/padding_large"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvNumeroTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_card_number"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"

                    android:enabled="true"
                    android:hint="@string/label_card_number"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    app:helperText="Introduce una tarjeta válida"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:startIconContentDescription="Icono de tarjeta"
                    app:startIconDrawable="@android:drawable/ic_input_get"
                    app:startIconTint="@android:color/darker_gray"

                    android:contentDescription="Tarjeta"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"

                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:focusable="true"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNumeroTarjeta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/hint_enter_card_number"
                        android:inputType="number"
                        android:minHeight="@dimen/min_touch_target_size"
                        android:paddingBottom="@dimen/padding_small"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"

                        android:layout_margin="8dp"
                        android:enabled="true"
                        android:padding="8dp"
                        android:visibility="visible"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@android:color/darker_gray"
                        app:boxStrokeWidth="2dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:helperText="Introduce una tarjeta válida"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:startIconContentDescription="Icono de tarjeta"
                        app:startIconDrawable="@android:drawable/ic_input_get"
                        app:startIconTint="@android:color/darker_gray"

                        android:contentDescription="Tarjeta"
                        android:importantForAccessibility="yes"
                        android:accessibilityLiveRegion="polite"

                        android:accessibilityTraversalAfter="@id/tvInformacionPago"
                        android:focusable="true"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@color/line_separator_color"

                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvCVV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_cvv"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"

                    android:enabled="true"
                    android:hint="@string/label_cvv"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    app:helperText="Introduce un cvv válido"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:startIconContentDescription="Icono de cvv"
                    app:startIconDrawable="@android:drawable/ic_input_get"
                    app:startIconTint="@android:color/darker_gray"

                    android:contentDescription="cvv"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"

                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:focusable="true"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/hint_enter_cvv"
                        android:inputType="number"
                        android:minHeight="@dimen/min_touch_target_size"
                        android:paddingBottom="@dimen/padding_small"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"

                        android:layout_margin="8dp"
                        android:enabled="true"
                        android:padding="8dp"
                        android:visibility="visible"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@android:color/darker_gray"
                        app:boxStrokeWidth="2dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:helperText="Introduce un cvv válido"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:startIconContentDescription="Icono de cvv"
                        app:startIconDrawable="@android:drawable/ic_input_get"
                        app:startIconTint="@android:color/darker_gray"

                        android:contentDescription="cvv"
                        android:importantForAccessibility="yes"
                        android:accessibilityLiveRegion="polite"

                        android:accessibilityTraversalAfter="@id/tvInformacionPago"
                        android:focusable="true"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@color/line_separator_color"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvVencimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_expiration"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"

                    android:enabled="true"
                    android:hint="@string/label_expiration"
                    android:inputType="textCapWords"
                    android:padding="8dp"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    app:helperText="Introduce un vencimiento válido"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:startIconContentDescription="Icono de vencimiento"
                    app:startIconDrawable="@android:drawable/ic_input_get"
                    app:startIconTint="@android:color/darker_gray"

                    android:contentDescription="Vencimiento"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"

                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:focusable="true"

                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etVencimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/hint_enter_expiration"
                        android:inputType="text"
                        android:maxLength="5"
                        android:minHeight="@dimen/min_touch_target_size"
                        android:paddingBottom="@dimen/padding_small"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_hint"

                        android:layout_margin="8dp"
                        android:enabled="true"
                        android:padding="8dp"
                        android:visibility="visible"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="8dp"
                        app:boxCornerRadiusBottomStart="8dp"
                        app:boxCornerRadiusTopEnd="8dp"
                        app:boxCornerRadiusTopStart="8dp"
                        app:boxStrokeColor="@android:color/darker_gray"
                        app:boxStrokeWidth="2dp"
                        app:counterEnabled="true"
                        app:counterMaxLength="50"
                        app:endIconMode="clear_text"
                        app:errorEnabled="true"
                        app:helperText="Introduce un vencimiento válido"
                        app:hintAnimationEnabled="true"
                        app:hintEnabled="true"
                        app:startIconContentDescription="Icono de vencimiento"
                        app:startIconDrawable="@android:drawable/ic_input_get"
                        app:startIconTint="@android:color/darker_gray"

                        android:contentDescription="Venciiento"
                        android:importantForAccessibility="yes"
                        android:accessibilityLiveRegion="polite"

                        android:accessibilityTraversalAfter="@id/tvInformacionPago"
                        android:focusable="true"

                        />
                </com.google.android.material.textfield.TextInputLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="@color/line_separator_color"

                    />

                <TextView
                    android:id="@+id/tvTipoTarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_card_type"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"

                    android:contentDescription="Típo de tarjeta"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"

                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:focusable="true"

                    />

                <Spinner
                    android:id="@+id/spTipoTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:overlapAnchor="false"
                    android:spinnerMode="dropdown"

                    android:contentDescription="Típo de tarjeta"
                    android:importantForAccessibility="yes"
                    android:accessibilityLiveRegion="polite"

                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:focusable="true"

                    />

                <!--

                <TextView
                    android:id="@+id/misdatosr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium_plus"
                    android:text="@string/label_my_data"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
