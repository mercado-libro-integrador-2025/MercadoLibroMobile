<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:orientation="vertical"
    android:padding="@dimen/padding_large"
    tools:context=".fragments.CarritoFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_medium"
        android:elevation="@dimen/card_elevation"
        app:cardBackgroundColor="@color/card_background_color"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/borde_card"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <TextView
                android:id="@+id/tituloFinalizarCompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/title_finish_purchase"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold"

                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:enabled="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="4dp"
                android:maxLines="1"
                android:minLines="1"
                android:visibility="visible"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/beige_suave"
                app:boxStrokeWidth="2dp"
                app:drawableLeftCompat="@drawable/ic_cart"

                android:contentDescription="Finalizar compra"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCarrito"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"

                android:contentDescription="Lista de Compra"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <TextView
                android:id="@+id/precioTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:enabled="true"

                android:fontFamily="sans-serif"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="4dp"
                android:maxLines="1"
                android:minLines="1"
                android:text="@string/total_price_format"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:visibility="visible"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/beige_suave"
                app:boxStrokeWidth="2dp"
                app:drawableLeftCompat="@android:drawable/star_big_on"

                android:contentDescription="Total"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <Button
                android:id="@+id/btnFinalizarCompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:backgroundTint="@color/azul_electrico"
                android:text="@string/button_continue"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"

                android:clickable="true"
                android:drawableLeft="@android:drawable/ic_media_next"
                android:drawablePadding="8dp"
                android:elevation="4dp"
                android:enabled="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="12dp"
                android:textColorLink="@color/azul"
                android:textStyle="bold"
                android:visibility="visible"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@android:color/darker_gray"
                app:boxStrokeWidth="2dp"
                app:cornerRadius="8dp"

                android:contentDescription="Continuar"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
