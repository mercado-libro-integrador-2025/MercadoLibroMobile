<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".fragments.CarritoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_large">

                <TextView
                    android:id="@+id/tvTituloResumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:fontFamily="@font/abril_fatface"
                    android:text="Resumen de compra"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xlarge_26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTuSeleccionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_top_xlarge"
                    android:text="Tu selección"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewCarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_carrito" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_top_xlarge"
                    android:background="@color/line_separator_color" />

                <TextView
                    android:id="@+id/tvDireccionEnvioTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:text="Dirección de envío"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDireccionSeleccionada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_marginBottom="@dimen/margin_medium"
                    app:cardBackgroundColor="@color/card_background_color_light"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation_small">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_large">

                        <TextView
                            android:id="@+id/tvDireccionCompleta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            tools:text="Calle Falsa 123, Springfield, Buenos Aires" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnCambiarDireccion"
                    android:layout_width="@dimen/button_width_medium"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:backgroundTint="@color/sunstone_neutral_6"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:text="Cambiar dirección"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:cornerRadius="@dimen/card_corner_radius" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_top_xlarge"
                    android:background="@color/line_separator_color" />

                <TextView
                    android:id="@+id/tvTotalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_xlarge"
                    android:text="Total"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_large">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total:"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTotalFinal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/sunstone_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold"
                            tools:text="$1700.00" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnFinalizarCompra"
                    android:layout_width="@dimen/button_width_medium"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_top_button_large"
                    android:backgroundTint="@color/sunstone_neutral_5"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:text="Confirmar compra"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_medium"
                    app:cornerRadius="@dimen/card_corner_radius" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>