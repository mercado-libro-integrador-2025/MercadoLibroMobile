<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_large"
    android:background="@drawable/fondo2"
    tools:context=".fragments.CarritoFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_marginBottom="@dimen/margin_medium"
        android:elevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/card_background_color"> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        android:padding="@dimen/padding_large"
        android:background="@drawable/borde_card"> <TextView
        android:id="@+id/tituloFinalizarCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_finish_purchase" android:textSize="@dimen/text_size_xlarge" android:textStyle="bold"
        android:textColor="@color/text_primary" android:layout_marginBottom="@dimen/margin_large"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCarrito"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="true" /> <TextView
            android:id="@+id/precioTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_price_placeholder" android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_xlarge"/>

        <Button
            android:id="@+id/btnFinalizarCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:backgroundTint="@color/azul_electrico" android:text="@string/button_continue" android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
