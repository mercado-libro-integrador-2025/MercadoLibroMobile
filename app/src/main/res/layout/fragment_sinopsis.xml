<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".fragments.SinopsisFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        app:cardBackgroundColor="@color/card_background_color"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_card"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <ImageView
                android:id="@+id/book_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height_large"
                android:layout_marginBottom="@dimen/margin_medium"
                android:scaleType="fitCenter"

                android:contentDescription="@string/content_description_book_cover"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/book_title_placeholder"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"

                android:contentDescription="TÃ­tulo del libro"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <TextView
                android:id="@+id/book_synopsis_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/label_synopsis"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"

                android:contentDescription="Sinopsis"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <TextView
                android:id="@+id/book_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:lineSpacingExtra="@dimen/line_spacing_extra"
                android:text="@string/book_synopsis_placeholder"
                android:textColor="@color/vino"
                android:textSize="@dimen/text_size_medium"

                android:contentDescription="Sinopsis"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <Button
                android:id="@+id/btnvolversinopsis"
                android:layout_width="@dimen/button_width_medium"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_top_button"
                android:backgroundTint="@color/vino"
                android:text="@string/button_back"
                android:textColor="@color/white"

                android:contentDescription="Volver"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>
