<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardContacto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        app:cardBackgroundColor="@color/card_background_color"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_min="wrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_card"
            app:boxStrokeColor="@android:color/system_error_900"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <TextView
                android:id="@+id/tvContactoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:autoLink="web"
                android:background="@android:color/system_error_900"
                android:contentDescription="Contacto"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:enabled="true"
                android:focusable="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:labelFor="@id/etNombre"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="4dp"
                android:maxLines="1"
                android:minLines="1"
                android:padding="8dp"
                android:text="@string/contact_title"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_xlarge_28sp"
                android:textStyle="bold"
                android:visibility="visible"

                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeWidth="2dp"

                app:drawableLeftCompat="@android:drawable/ic_menu_myplaces" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:contentDescription="Nombre"
                android:enabled="true"
                android:focusable="true"
                android:hint="@string/hint_name"
                android:importantForAccessibility="yes"
                android:inputType="textPersonName|textCapWords"
                android:labelFor="@id/etNombre"
                android:padding="8dp"
                android:visibility="visible"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="50"

                app:endIconMode="clear_text"
                app:errorEnabled="true"

                app:helperText="Introduce un nombre válido"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconContentDescription="Icono de nombre"
                app:startIconDrawable="@drawable/ic_profile"

                app:helperTextTextColor="@android:color/system_error_900"
                android:textColorHint="@android:color/system_error_900"
                app:boxBackgroundColor="@android:color/white"
                android:background="@android:color/white"
                android:backgroundTint="@android:color/white"
                app:boxStrokeColor="@android:color/system_error_900"
                app:endIconTint="@android:color/system_error_900"
                app:errorTextColor="@android:color/system_error_900"
                app:counterTextColor="@android:color/system_error_900"
                app:hintTextColor="@android:color/system_error_900"
                app:placeholderTextColor="@android:color/system_error_900"
                app:prefixTextColor="@android:color/system_error_900"
                app:startIconTint="@android:color/system_error_900"
                app:suffixTextColor="@android:color/system_error_900"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:accessibilityTraversalBefore="@id/etNombre"
                    android:contentDescription="Nombre"
                    android:enabled="true"
                    android:focusable="true"
                    android:hint="@string/hint_name"
                    android:importantForAccessibility="yes"
                    android:inputType="textPersonName|textCapWords"
                    android:labelFor="@id/etNombre"
                    android:padding="8dp"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:endIconMode="clear_text"
                    app:errorEnabled="true"
                    app:helperText="Introduce un nombre válido"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:startIconContentDescription="Icono de nombre"
                    app:startIconDrawable="@drawable/ic_profile"

                    app:boxStrokeColor="@android:color/system_error_900"
                    app:startIconTint="@android:color/system_error_900"
                    android:textColor="@android:color/system_error_900"
                    android:textColorHighlight="@android:color/system_error_900"
                    android:textColorHint="@android:color/system_error_900"

                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:autofillHints="emailAddress"
                android:contentDescription="Email"
                android:cursorVisible="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif"
                android:hint="@string/hint_email"
                android:imeOptions="actionDone"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes"
                android:inputType="textEmailAddress"
                android:labelFor="@id/etNombre"
                android:maxLines="1"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:visibility="visible"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:endIconMode="clear_text"

                app:errorEnabled="true"
                app:helperText="Introduce un correo válido"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconContentDescription="Icono de correo"
                app:startIconDrawable="@android:drawable/ic_dialog_email"

                app:helperTextTextColor="@android:color/system_error_900"
                android:textColorHint="@android:color/system_error_900"
                app:boxBackgroundColor="@android:color/white"
                android:background="@android:color/white"
                android:backgroundTint="@android:color/white"
                app:boxStrokeColor="@android:color/system_error_900"
                app:endIconTint="@android:color/system_error_900"
                app:errorTextColor="@android:color/system_error_900"
                app:counterTextColor="@android:color/system_error_900"
                app:hintTextColor="@android:color/system_error_900"
                app:placeholderTextColor="@android:color/system_error_900"
                app:prefixTextColor="@android:color/system_error_900"
                app:startIconTint="@android:color/system_error_900"
                app:suffixTextColor="@android:color/system_error_900"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:accessibilityTraversalBefore="@id/etNombre"
                    android:autofillHints="emailAddress"
                    android:contentDescription="Email"
                    android:cursorVisible="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:hint="@string/hint_email"
                    android:imeOptions="actionDone"
                    android:importantForAccessibility="yes"
                    android:importantForAutofill="yes"
                    android:inputType="textEmailAddress"
                    android:labelFor="@id/etNombre"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:endIconMode="clear_text"

                    app:errorEnabled="true"
                    app:helperText="Introduce un correo válido"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:startIconContentDescription="Icono de correo"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"

                    app:boxStrokeColor="@android:color/system_error_900"
                    app:startIconTint="@android:color/system_error_900"
                    android:textColor="@android:color/system_error_900"
                    android:textColorHighlight="@android:color/system_error_900"
                    android:textColorHint="@android:color/system_error_900"

                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAsunto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:autofillHints="emailAddress"
                android:contentDescription="Asunto"
                android:cursorVisible="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif"
                android:hint="@string/hint_subject"
                android:imeOptions="actionDone"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes"
                android:inputType="textCapSentences"
                android:labelFor="@id/etNombre"
                android:maxLines="2"
                android:minLines="2"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:visibility="visible"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:endIconMode="clear_text"

                app:errorEnabled="true"
                app:helperText="Introduce un asunto válido"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconContentDescription="Icono de asunto"
                app:startIconDrawable="@drawable/ic_contact"

                app:helperTextTextColor="@android:color/system_error_900"
                android:textColorHint="@android:color/system_error_900"
                app:boxBackgroundColor="@android:color/white"
                android:background="@android:color/white"
                android:backgroundTint="@android:color/white"
                app:boxStrokeColor="@android:color/system_error_900"
                app:endIconTint="@android:color/system_error_900"
                app:errorTextColor="@android:color/system_error_900"
                app:counterTextColor="@android:color/system_error_900"
                app:hintTextColor="@android:color/system_error_900"
                app:placeholderTextColor="@android:color/system_error_900"
                app:prefixTextColor="@android:color/system_error_900"
                app:startIconTint="@android:color/system_error_900"
                app:suffixTextColor="@android:color/system_error_900"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAsunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:accessibilityTraversalBefore="@id/etNombre"
                    android:autofillHints="emailAddress"
                    android:contentDescription="Asunto"
                    android:cursorVisible="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:hint="@string/hint_subject"
                    android:imeOptions="actionDone"
                    android:importantForAccessibility="yes"
                    android:importantForAutofill="yes"
                    android:inputType="textCapSentences"
                    android:labelFor="@id/etNombre"
                    android:maxLines="2"
                    android:minLines="2"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:endIconMode="clear_text"

                    app:errorEnabled="true"
                    app:helperText="Introduce un asunto válido"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:startIconContentDescription="Icono de asunto"
                    app:startIconDrawable="@drawable/ic_contact"

                    app:boxStrokeColor="@android:color/system_error_900"
                    app:startIconTint="@android:color/system_error_900"
                    android:textColor="@android:color/system_error_900"
                    android:textColorHighlight="@android:color/system_error_900"
                    android:textColorHint="@android:color/system_error_900"

                    />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:autofillHints="emailAddress"
                android:contentDescription="Mensaje"
                android:cursorVisible="true"
                android:enabled="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif"
                android:gravity="top|start"
                android:hint="@string/hint_query"
                android:imeOptions="actionDone"
                android:importantForAccessibility="yes"
                android:importantForAutofill="yes"
                android:inputType="textMultiLine|textCapSentences"
                android:labelFor="@id/etNombre"
                android:maxLines="5"
                android:minLines="5"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="16sp"
                android:visibility="visible"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeWidth="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="50"
                app:endIconMode="clear_text"

                app:errorEnabled="true"
                app:helperText="Introduce una consulta válida"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:startIconContentDescription="Icono de consulta"
                app:startIconDrawable="@android:drawable/ic_menu_agenda"

                app:helperTextTextColor="@android:color/system_error_900"
                android:textColorHint="@android:color/system_error_900"
                app:boxBackgroundColor="@android:color/white"
                android:background="@android:color/white"
                android:backgroundTint="@android:color/white"
                app:boxStrokeColor="@android:color/system_error_900"
                app:endIconTint="@android:color/system_error_900"
                app:errorTextColor="@android:color/system_error_900"
                app:counterTextColor="@android:color/system_error_900"
                app:hintTextColor="@android:color/system_error_900"
                app:placeholderTextColor="@android:color/system_error_900"
                app:prefixTextColor="@android:color/system_error_900"
                app:startIconTint="@android:color/system_error_900"
                app:suffixTextColor="@android:color/system_error_900"

                >


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConsulta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"
                    android:accessibilityTraversalBefore="@id/etNombre"
                    android:autofillHints="emailAddress"
                    android:contentDescription="Mensaje"
                    android:cursorVisible="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:gravity="top|start"
                    android:hint="@string/hint_query"
                    android:imeOptions="actionDone"
                    android:importantForAccessibility="yes"
                    android:importantForAutofill="yes"
                    android:inputType="textMultiLine|textCapSentences"
                    android:labelFor="@id/etNombre"
                    android:maxLines="5"
                    android:minLines="5"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeWidth="2dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:endIconMode="clear_text"

                    app:errorEnabled="true"
                    app:helperText="Introduce una consulta válida"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true"
                    app:startIconContentDescription="Icono de consulta"
                    app:startIconDrawable="@android:drawable/ic_menu_agenda"

                    app:boxStrokeColor="@android:color/system_error_900"
                    app:startIconTint="@android:color/system_error_900"
                    android:textColor="@android:color/system_error_900"
                    android:textColorHighlight="@android:color/system_error_900"
                    android:textColorHint="@android:color/system_error_900"

                    />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnEnviarConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="@dimen/margin_top_button_large"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:accessibilityTraversalBefore="@id/etNombre"

                android:backgroundTint="@color/sunstone_neutral_2"
                android:clickable="true"
                android:contentDescription="Enviar consulta"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:drawablePadding="8dp"
                android:elevation="4dp"
                android:enabled="true"
                android:focusable="true"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:importantForAccessibility="yes"
                android:labelFor="@id/etNombre"
                android:padding="12dp"
                android:text="@string/button_send"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:visibility="visible"
                app:boxBackgroundMode="outline"

                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@android:color/darker_gray"
                app:boxStrokeWidth="2dp"
                app:cornerRadius="8dp"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>