<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_large"
        app:cardBackgroundColor="@color/card_background_color"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borde_card"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <TextView
                android:id="@+id/tvContactoTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_large"
                android:text="@string/contact_title"
                android:textAlignment="center"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_xlarge_28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAsunto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge"
                android:background="@android:color/transparent"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_subject"
                android:inputType="textCapSentences"
                android:minHeight="@dimen/min_touch_target_size"
                android:paddingBottom="@dimen/padding_small"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/sunstone_neutral_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@color/sunstone_neutral_5" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge"
                android:background="@android:color/transparent"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_name"
                android:inputType="textPersonName|textCapWords"
                android:minHeight="@dimen/min_touch_target_size"
                android:paddingBottom="@dimen/padding_small"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/sunstone_neutral_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@color/line_separator_color" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge"
                android:background="@android:color/transparent"
                android:focusableInTouchMode="true"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:minHeight="@dimen/min_touch_target_size"
                android:paddingBottom="@dimen/padding_small"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/sunstone_neutral_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@color/line_separator_color" />

            <EditText
                android:id="@+id/etConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_xlarge"
                android:background="@android:color/transparent"
                android:focusableInTouchMode="true"
                android:gravity="top|start"
                android:hint="@string/hint_query"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:paddingBottom="@dimen/padding_small"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/sunstone_neutral_2"
                android:textSize="@dimen/text_size_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@color/line_separator_color" />

            <Button
                android:id="@+id/btnEnviarConsulta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_button_large"
                android:backgroundTint="@color/sunstone_neutral_2"
                android:text="@string/button_send"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
