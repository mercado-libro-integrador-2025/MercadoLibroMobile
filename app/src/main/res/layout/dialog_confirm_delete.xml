<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding_xlarge"
    android:background="@drawable/borde_card">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_medium"
        android:text="@string/dialog_confirm_delete_message"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_medium_18sp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_touch_target_size"
            android:backgroundTint="@color/sunstone_neutral_6"
            android:textColor="@color/text_primary"
            android:text="@string/dialog_confirm_delete_yes_button"
            app:cornerRadius="@dimen/card_corner_radius" />

        <Button
            android:id="@+id/negative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:backgroundTint="@color/button_background_dialog_delete_negative"
            android:minHeight="@dimen/min_touch_target_size"
            android:text="@string/dialog_confirm_delete_no_button"
            android:textColor="@color/text_primary"
            app:cornerRadius="@dimen/card_corner_radius" />
    </LinearLayout>
</LinearLayout>
