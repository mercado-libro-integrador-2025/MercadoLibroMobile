<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/borde_card"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding_xlarge">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_medium"
        android:autoLink="web"
        android:background="#EFDFCD"

        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:enabled="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:minLines="2"
        android:padding="8dp"
        android:text="@string/dialog_confirm_delete_message"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_medium_18sp"
        android:visibility="visible"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/beige_suave"
        app:boxStrokeWidth="2dp"
        app:drawableLeftCompat="@android:drawable/ic_menu_help"

        android:contentDescription="Estas seguro"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/positive_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/border_gray"
            android:minHeight="@dimen/min_touch_target_size"
            android:text="@string/dialog_confirm_delete_yes_button"
            android:textColor="@color/text_primary"

            android:clickable="true"
            android:drawableLeft="@android:drawable/sym_call_outgoing"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:enabled="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@android:color/darker_gray"
            app:boxStrokeWidth="2dp"
            app:cornerRadius="8dp"

            android:contentDescription="Si"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            android:accessibilityTraversalBefore="@id/etNombre"
            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"
            android:labelFor="@id/etNombre"


            />

        <Button
            android:id="@+id/negative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:backgroundTint="@color/border_gray"
            android:minHeight="@dimen/min_touch_target_size"
            android:text="@string/dialog_confirm_delete_no_button"
            android:textColor="@color/text_primary"

            android:clickable="true"
            android:contentDescription="No"
            android:drawableLeft="@android:drawable/sym_call_missed"
            android:drawablePadding="8dp"
            android:elevation="4dp"
            android:enabled="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@android:color/darker_gray"
            app:boxStrokeWidth="2dp"
            app:cornerRadius="8dp"

            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            android:accessibilityTraversalBefore="@id/etNombre"
            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:labelFor="@id/etNombre"

            />
    </LinearLayout>
</LinearLayout>
