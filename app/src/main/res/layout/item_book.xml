<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium" android:background="@drawable/borde_card"
    android:elevation="@dimen/card_elevation" android:padding="@dimen/padding_large">

    <ImageView
        android:id="@+id/ivBookCover"
        android:layout_width="@dimen/book_cover_width" android:layout_height="@dimen/book_cover_height" android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description_book_cover" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small" android:text="@string/book_title_placeholder" android:textColor="@color/text_primary" android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBookPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_extra_small" android:text="@string/book_price_placeholder" android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvBookTitle" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/book_author_placeholder" android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvBookPrice" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:text="@string/book_category_placeholder" android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_small" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvAuthor" />

    <TextView
        android:id="@+id/tvBookStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/book_stock_placeholder" android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvCategory" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvBookStock">

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_extra_small" android:layout_weight="1"
            android:backgroundTint="@color/azul"
            android:padding="@dimen/padding_medium"
            android:text="@string/button_buy" android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btnSinopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_extra_small"
            android:layout_weight="1"
            android:backgroundTint="@color/vino"
            android:padding="@dimen/padding_medium"
            android:text="@string/button_synopsis" android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
