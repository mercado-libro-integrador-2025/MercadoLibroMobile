<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    android:background="@drawable/borde_card"
    android:elevation="@dimen/card_elevation"
    android:padding="@dimen/padding_large">

    <ImageView
        android:id="@+id/ivBookCover"
        android:layout_width="@dimen/book_cover_width"
        android:layout_height="@dimen/book_cover_height"
        android:adjustViewBounds="true"
        android:contentDescription="@string/content_description_book_cover"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvBookTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="@string/book_title_placeholder"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvBookPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/book_price_placeholder"
        android:textColor="@color/sunstone_neutral_6"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvBookTitle" />
    <LinearLayout
        android:id="@+id/authorCategoryLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover"
        app:layout_constraintTop_toBottomOf="@id/tvBookPrice">
        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_author_placeholder"
            android:textColor="@color/sunstone_neutral_5"
            android:textSize="@dimen/text_size_medium" />
        <TextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:text="@string/book_category_placeholder"
            android:textColor="@color/sunstone_neutral_5"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivBookCover">
        <Button
            android:id="@+id/btnComprar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_extra_small"
            android:layout_weight="1"
            android:backgroundTint="@color/sunstone_neutral_6"
            android:minHeight="@dimen/min_touch_target_size"
            android:padding="@dimen/padding_small"
            android:text="@string/button_buy"
            android:textColor="@color/text_primary"
            android:textSize="12dp"
            app:cornerRadius="@dimen/card_corner_radius" />
        <Button
            android:id="@+id/btnSinopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_extra_small"
            android:layout_marginEnd="@dimen/margin_extra_small"
            android:layout_weight="1"
            android:backgroundTint="@color/sunstone_neutral_6"
            android:minHeight="@dimen/min_touch_target_size"
            android:padding="@dimen/padding_small"
            android:text="@string/button_synopsis"
            android:textColor="@color/text_primary"
            android:textSize="12dp"
            app:cornerRadius="@dimen/card_corner_radius" />
        <Button
            android:id="@+id/btnViewReviews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_extra_small"
            android:layout_weight="1"
            android:backgroundTint="@color/sunstone_neutral_6"
            android:minHeight="@dimen/min_touch_target_size"
            android:padding="@dimen/padding_small"
            android:text="@string/button_view_reviews"
            android:textColor="@color/text_primary"
            android:textSize="12dp"
            app:cornerRadius="@dimen/card_corner_radius" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>