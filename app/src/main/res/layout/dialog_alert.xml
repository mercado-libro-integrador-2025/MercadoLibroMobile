<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borde_card"
    android:orientation="vertical"
    android:padding="@dimen/dialog_padding_large">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"


        android:autoLink="web"
        android:contentDescription="Registro exitoso"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:enabled="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:importantForAccessibility="yes"

        android:letterSpacing="0.02"
        android:lineSpacingExtra="4dp"
        android:maxLines="1"
        android:minLines="1"
        android:padding="8dp"
        android:text="@string/dialog_registration_success_title"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_large"
        android:visibility="visible"
        app:boxBackgroundMode="outline"

        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/beige_suave"
        app:boxStrokeWidth="2dp"
        app:drawableLeftCompat="@android:drawable/ic_dialog_map"

        />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:layout_marginBottom="@dimen/margin_extra_small"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"


        android:autoLink="web"
        android:contentDescription="Te has registrado correctamente"
        android:drawablePadding="6dp"
        android:ellipsize="end"
        android:enabled="true"
        android:focusable="true"
        android:fontFamily="sans-serif"
        android:importantForAccessibility="yes"

        android:letterSpacing="0.02"
        android:lineSpacingExtra="4dp"
        android:maxLines="1"
        android:minLines="1"
        android:padding="8dp"
        android:text="@string/dialog_registration_success_message"
        android:textColor="@color/text_primary"
        android:visibility="visible"

        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@color/beige_suave"
        app:boxStrokeWidth="2dp"

        />

    <Button
        android:id="@+id/positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"

        android:backgroundTint="@color/sunstone_neutral_2"

        android:clickable="true"
        android:contentDescription="Aceptar"
        android:drawableLeft="@android:drawable/ic_menu_send"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:enabled="true"
        android:focusable="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:importantForAccessibility="yes"


        android:minHeight="@dimen/min_touch_target_size"
        android:padding="12dp"
        android:text="@string/dialog_alert_positive_button"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"

        />
</LinearLayout>
