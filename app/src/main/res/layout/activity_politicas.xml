<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".activities.Politicas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        android:padding="@dimen/padding_large">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            app:cardBackgroundColor="@color/card_background_color"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_card"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium_12dp">

                <TextView
                    android:id="@+id/titleMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="@dimen/margin_xlarge_20dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"


                    android:autoLink="web"
                    android:contentDescription="@string/title_policies_main"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                      android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="2"
                    android:minLines="2"
                    android:padding="@dimen/padding_medium_10dp"
                    android:text="@string/title_policies_main"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"

                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/sym_action_chat"

                    />

                <TextView
                    android:id="@+id/titleCalidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:autoLink="web"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:contentDescription="@string/title_quality"

                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                      android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="1"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:minLines="1"
                    android:padding="@dimen/padding_medium_10dp"
                    android:text="@string/title_quality"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_section_title"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"

                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/ic_input_add"

                    />

                <TextView
                    android:id="@+id/contentCalidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_extra_small_5dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:contentDescription="@string/content_quality"
                    android:focusable="true"

                    android:importantForAccessibility="yes"
                      android:padding="@dimen/padding_extra_small_5dp"
                    android:text="@string/content_quality"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_content"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/titleGarantia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:autoLink="web"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:contentDescription="@string/title_satisfaction_guarantee"

                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                      android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="1"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:minLines="1"
                    android:padding="@dimen/padding_medium_10dp"
                    android:text="@string/title_satisfaction_guarantee"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_section_title"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"

                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/ic_input_add"

                    />

                <TextView
                    android:id="@+id/contentGarantia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_extra_small_5dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:contentDescription="@string/content_satisfaction_guarantee"
                    android:focusable="true"

                    android:importantForAccessibility="yes"
                      android:padding="@dimen/padding_extra_small_5dp"
                    android:text="@string/content_satisfaction_guarantee"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_content"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/titleSeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:autoLink="web"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:contentDescription="@string/title_transaction_security"

                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                      android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="1"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:minLines="1"
                    android:padding="@dimen/padding_medium_10dp"
                    android:text="@string/title_transaction_security"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_section_title"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"

                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/ic_input_add"

                    />

                <TextView
                    android:id="@+id/contentSeguridad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_extra_small_5dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:contentDescription="@string/content_transaction_security"
                    android:focusable="true"

                    android:importantForAccessibility="yes"
                      android:padding="@dimen/padding_extra_small_5dp"
                    android:text="@string/content_transaction_security"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_content"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/titlePrivacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:autoLink="web"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:contentDescription="@string/title_data_privacy"

                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                      android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="1"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:minLines="1"
                    android:padding="@dimen/padding_medium_10dp"
                    android:text="@string/title_data_privacy"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_section_title"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"

                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/ic_input_add"

                    />

                <TextView
                    android:id="@+id/contentPrivacidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_extra_small_5dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:contentDescription="@string/content_data_privacy"
                    android:focusable="true"

                    android:importantForAccessibility="yes"
                      android:padding="@dimen/padding_extra_small_5dp"
                    android:text="@string/content_data_privacy"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_content"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/titleEnvio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:autoLink="web"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:contentDescription="@string/title_secure_shipping"

                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                      android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="1"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:minLines="1"
                    android:padding="@dimen/padding_medium_10dp"
                    android:text="@string/title_secure_shipping"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_section_title"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"

                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/ic_input_add"

                    />

                <TextView
                    android:id="@+id/contentEnvio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_extra_small_5dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:contentDescription="@string/content_secure_shipping"
                    android:focusable="true"

                    android:importantForAccessibility="yes"
                      android:padding="@dimen/padding_extra_small_5dp"
                    android:text="@string/content_secure_shipping"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_content"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/titleAtencion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:autoLink="web"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:contentDescription="@string/title_customer_service"

                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                      android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="1"
                    android:minHeight="@dimen/min_touch_target_size"
                    android:minLines="1"
                    android:padding="@dimen/padding_medium_10dp"
                    android:text="@string/title_customer_service"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_section_title"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"

                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/ic_input_add"

                    />

                <TextView
                    android:id="@+id/contentAtencion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_extra_small_5dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:contentDescription="@string/content_customer_service"
                    android:focusable="true"

                    android:importantForAccessibility="yes"
                      android:padding="@dimen/padding_extra_small_5dp"
                    android:text="@string/content_customer_service"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_content"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/footerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_xlarge_20dp"
                    android:accessibilityLiveRegion="polite"
                    android:accessibilityTraversalAfter="@id/tvInformacionPago"

                    android:autoLink="web"

                    android:contentDescription="@string/footer_acknowledgement"
                    android:ellipsize="end"
                    android:enabled="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:importantForAccessibility="yes"
                      android:letterSpacing="0.02"
                    android:lineSpacingExtra="4dp"
                    android:maxLines="2"
                    android:minLines="2"
                    android:padding="@dimen/padding_medium_10dp"
                    android:text="@string/footer_acknowledgement"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_content"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:boxBackgroundMode="outline"

                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxStrokeColor="@android:color/darker_gray"
                    app:boxStrokeWidth="2dp"
                    app:drawableLeftCompat="@android:drawable/ic_notification_clear_all"

                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
