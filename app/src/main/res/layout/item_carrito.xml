<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clipToOutline="false"
    android:elevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/borde_card"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTituloLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título del Libro"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"

            android:contentDescription="Título del libro"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            android:accessibilityTraversalBefore="@id/etNombre"
            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"
            android:labelFor="@id/etNombre"

            />

        <TextView
            android:id="@+id/tvCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"
            android:textColor="@color/black"

            android:contentDescription="Cantidad"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            android:accessibilityTraversalBefore="@id/etNombre"
            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"
            android:labelFor="@id/etNombre"

            />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="@color/black"

            android:contentDescription="Precio"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            android:accessibilityTraversalBefore="@id/etNombre"
            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"
            android:labelFor="@id/etNombre"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_delete"

                android:contentDescription="Borrar"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <ImageButton
                android:id="@+id/btnDisminuirCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_restar"

                android:contentDescription="Disminuir"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />

            <ImageButton
                android:id="@+id/btnAumentarCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_sumar"

                android:contentDescription="Aumentar"
                android:importantForAccessibility="yes"
                android:accessibilityLiveRegion="polite"
                android:accessibilityTraversalBefore="@id/etNombre"
                android:accessibilityTraversalAfter="@id/tvInformacionPago"
                android:focusable="true"
                android:labelFor="@id/etNombre"

                />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
