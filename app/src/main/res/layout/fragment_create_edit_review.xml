<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="@dimen/padding_large"
    tools:context=".fragments.CreateEditReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvReviewFormTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_review_title"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_large"/>

        <TextView
            android:id="@+id/tvBookTitleReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/book_title_placeholder_review"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_large"
            android:layout_marginBottom="@dimen/margin_medium"
            android:visibility="gone"/> <Spinner
        android:id="@+id/spinnerBookSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_input"
        android:padding="@dimen/padding_small"
        android:layout_marginBottom="@dimen/margin_medium"
        android:spinnerMode="dropdown"
        android:prompt="@string/hint_select_book_spinner"
        android:visibility="gone"/> <EditText
        android:id="@+id/etReviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_review_content"
        android:background="@drawable/borde_input"
        android:padding="@dimen/padding_medium"
        android:textColorHint="@color/text_hint"
        android:textColor="@color/text_primary"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:gravity="top|start"
        android:layout_marginBottom="@dimen/margin_medium"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/progress_bar_size"
            android:layout_height="@dimen/progress_bar_size"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"/>

        <Button
            android:id="@+id/btnSaveReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save_review"
            android:backgroundTint="@color/azul"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_large"/>

        <Button
            android:id="@+id/btnDeleteReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_delete_review"
            android:backgroundTint="@color/crim"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_small"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
