<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".activities.LoginActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/guideline_margin_horizontal" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9294404" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginTop="@dimen/margin_large"
        android:adjustViewBounds="true"
        android:alpha="0.9"

        android:elevation="4dp"
        android:enabled="true"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logoremake"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoremake"

        android:contentDescription="@string/logo_content_description"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

    <TextView
        android:id="@+id/tvUsernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/label_username"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_medium_18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"

        android:contentDescription="@string/label_username"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small"
        app:errorEnabled="true"
        app:errorTextColor="@color/error_color"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tvUsernameLabel"

        android:layout_margin="8dp"
        android:enabled="true"
        android:hint="Usuario"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:visibility="visible"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@android:color/darker_gray"
        app:boxStrokeWidth="2dp"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:helperText="Introduce un usuario válido"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:startIconContentDescription="Icono de usuario"
        app:startIconDrawable="@drawable/ic_profile"
        app:startIconTint="@android:color/darker_gray"

        android:contentDescription="Usuario"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_touch_target_size"
            android:layout_margin="@dimen/input_margin"
            android:background="@drawable/borde_input"
            android:hint="@string/hint_username_input"
            android:inputType="textEmailAddress"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:hintTextColor="@color/input_hint_color"

            android:enabled="true"
            android:padding="8dp"
            android:visibility="visible"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@android:color/darker_gray"
            app:boxStrokeWidth="2dp"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperText="Introduce un usuario válido"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:startIconContentDescription="Icono de usuario"
            app:startIconDrawable="@drawable/ic_profile"
            app:startIconTint="@android:color/darker_gray"

            android:contentDescription="Usuario"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            android:accessibilityTraversalBefore="@id/etNombre"
            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"
            android:labelFor="@id/etNombre"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/label_password"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_medium_18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutUsername"

        android:contentDescription="Contraseña"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small"
        app:errorEnabled="true"
        app:errorTextColor="@color/error_color"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordLabel"

        android:layout_margin="8dp"
        android:enabled="true"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="8dp"
        android:visibility="visible"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@android:color/darker_gray"
        app:boxStrokeWidth="2dp"
        app:counterEnabled="true"
        app:counterMaxLength="50"
        app:endIconMode="clear_text"
        app:helperText="Introduce una contraseña válida"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:startIconContentDescription="Icono de contraseña"
        app:startIconDrawable="@drawable/ic_profile"
        app:startIconTint="@android:color/darker_gray"

        android:contentDescription="Contraseña"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_touch_target_size"
            android:layout_margin="@dimen/input_margin"
            android:background="@drawable/borde_input"
            android:hint="@string/hint_password_input"
            android:inputType="textPassword"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:hintTextColor="@color/input_hint_color"

            android:enabled="true"
            android:padding="8dp"
            android:visibility="visible"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusTopStart="8dp"
            app:boxStrokeColor="@android:color/darker_gray"
            app:boxStrokeWidth="2dp"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperText="Introduce una contraseña valida"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true"
            app:startIconContentDescription="Icono de contraseña"
            app:startIconDrawable="@drawable/ic_profile"
            app:startIconTint="@android:color/darker_gray"

            android:contentDescription="Contraseña"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            android:accessibilityTraversalBefore="@id/etNombre"
            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"
            android:labelFor="@id/etNombre"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/label_name"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_medium_18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPassword"

        android:contentDescription="Nombre"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_small"
        android:visibility="gone"
        app:errorEnabled="true"
        app:errorTextColor="@color/error_color"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"

        android:contentDescription="Nombre"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/min_touch_target_size"
            android:layout_margin="@dimen/input_margin"
            android:background="@drawable/borde_input"
            android:hint="@string/hint_name_input"
            android:inputType="textPersonName"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            app:hintTextColor="@color/input_hint_color"

            android:contentDescription="Nombre"
            android:importantForAccessibility="yes"
            android:accessibilityLiveRegion="polite"
            android:accessibilityTraversalBefore="@id/etNombre"
            android:accessibilityTraversalAfter="@id/tvInformacionPago"
            android:focusable="true"
            android:labelFor="@id/etNombre"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonMainAction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_touch_target_size"
        android:layout_marginTop="@dimen/margin_medium"
        android:backgroundTint="@color/button_background_primary"
        android:text="@string/button_login_text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutName"

        android:layout_margin="8dp"
        android:clickable="true"
        android:drawableLeft="@android:drawable/stat_sys_download"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:enabled="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="12dp"
        android:textColorLink="@color/azul"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@android:color/darker_gray"
        app:boxStrokeWidth="2dp"
        app:cornerRadius="8dp"

        android:contentDescription="Ingresar"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

    <Button
        android:id="@+id/buttonToggleMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_touch_target_size"
        android:layout_marginTop="@dimen/margin_medium"
        android:backgroundTint="@color/button_background_secondary"
        android:text="@string/button_register_text"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"
        app:layout_constraintTop_toBottomOf="@+id/buttonMainAction"

        android:layout_margin="8dp"
        android:clickable="true"
        android:drawableLeft="@android:drawable/stat_sys_upload"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:enabled="true"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="12dp"
        android:textColorLink="@color/azul"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxStrokeColor="@android:color/darker_gray"
        app:boxStrokeWidth="2dp"
        app:cornerRadius="8dp"

        android:contentDescription="Registrarse"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

    <Button
        android:id="@+id/buttonpoli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/min_touch_target_size"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/button_politics_text"
        android:textColor="@color/text_primary"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_end"
        app:layout_constraintStart_toStartOf="@+id/guideline_start"

        android:contentDescription="Politicas de Privacidad"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:contentDescription="Título: Bienvenido a la sección de contacto"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalBefore="@id/etNombre"
        android:accessibilityTraversalAfter="@id/tvInformacionPago"
        android:focusable="true"
        android:labelFor="@id/etNombre"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
